<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragment.FragmentProfil.Activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/purple_700"
            android:padding="5dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/purple_700"
            android:fontFamily="@font/roboto"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="#F8F8F8"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:textColor="#003569"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/to_profile"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:background="@drawable/button7"
                android:layout_marginTop="12dp"
                android:text="Modifier profil"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Lier un compte facebook"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textColor="#8E8E8E"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:drawableEnd="@drawable/ic_facebook"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:id="@+id/annonce"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Langue"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textColor="#8E8E8E"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:drawableEnd="@drawable/ic_langue"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"
        android:layout_marginHorizontal="30dp"/>

</LinearLayout>