<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="5dp"
        >

        <ImageView
            android:id="@+id/search"
            android:layout_width="70dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/filter"
            android:layout_width="70dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filter"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_stock_24_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/all"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button4"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:text="@string/all"
            android:textAllCaps="false"
            android:textColor="@color/teal_200"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/recent"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="50dp"
            android:background="@drawable/button4"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:text="@string/Plus_récents"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:textColor="@color/teal_200"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_chevron_down"
            android:drawablePadding="10dp"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/button5"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitStart"
                android:src="@drawable/machine_laver" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button5"
                android:elevation="7dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_favoris"
                    app:tint="@color/teal_200"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="NEUF"
                android:layout_marginBottom="10dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:background="@drawable/text_view_1"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/relative"
            android:fontFamily="@font/roboto_medium"
            android:text="Lot de machines à laver Samsung"
            android:textColor="@color/black"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/relative"
            android:fontFamily="@font/roboto"
            android:text="Electroménager"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wilaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/category"
            android:layout_below="@id/title"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:drawableStart="@drawable/ic_map_pin"
            android:drawableTint="@color/teal_200"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            android:text="Alger"
            android:drawablePadding="7dp"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/relative"
            android:layout_below="@id/category"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:drawableStart="@drawable/ic_clock"
            android:textSize="15sp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/roboto"
            android:text="15 min"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="45.000 DA"
            android:textColor="@color/purple_700"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/wilaya"
            android:layout_marginTop="7dp"
            />







    </RelativeLayout>

</LinearLayout>